{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "d3": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "eqeqeq": "error",
        "curly": ["error", "all"],
        "no-multi-spaces": "error",
        "no-unused-expressions": "error",
        "no-var": "error",
        "prefer-const": "error"
    }
}
